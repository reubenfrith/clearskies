# Copy this file to .env and fill in your values.
# NEVER commit .env â€” it is gitignored.

# Railway PostgreSQL connection string (Railway sets this automatically when you add the plugin)
DATABASE_URL=postgresql://user:pass@host:5432/dbname

# Geotab credentials
GEOTAB_SERVER=my.geotab.com
GEOTAB_DATABASE=your-database-name
GEOTAB_USERNAME=your@email.com
GEOTAB_PASSWORD=your-password

# Twilio SMS
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-auth-token-here
TWILIO_FROM_NUMBER=+1xxxxxxxxxx

# Polling
POLL_INTERVAL_MINUTES=5
DEMO_MODE=false
